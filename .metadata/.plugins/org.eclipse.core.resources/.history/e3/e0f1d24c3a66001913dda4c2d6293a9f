package com.ehr.portal.controllers;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import com.ehr.portal.portal.mapper.EhrUserMapper;
import com.ehr.portal.portal.pojo.EhrUser;
import com.ehr.portal.portal.pojo.EhrUserExample;
import com.ehr.portal.portal.utils.EhrResult;

@Controller
@RequestMapping("/system")
public class SystemController {

	@Autowired
	EhrUserMapper uMapper;
	
	@RequestMapping("/queryAllUser")
	@ResponseBody
	public EhrResult queryAllUser() {
		EhrUserExample example = new EhrUserExample();
		List<EhrUser> list = uMapper.selectByExample(example);
		return EhrResult.ok(list);
	}
}
